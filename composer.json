{
    "name": "mirza/pro-bot",
    "description": "Mirza Pro - Advanced Telegram Bot for VPN Panel Management",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "Mirza Pro Team",
            "email": "support@mirzapro.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "guzzlehttp/guzzle": "^7.5",
        "monolog/monolog": "^2.8",
        "vlucas/phpdotenv": "^5.5",
        "telegram-bot/api": "^2.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "MirzaPro\\": "app/",
            "MirzaPro\\Api\\": "api/",
            "MirzaPro\\Panels\\": "panel/",
            "MirzaPro\\Payment\\": "payment/",
            "MirzaPro\\Cron\\": "cronbot/",
            "MirzaPro\\Sub\\": "sub/",
            "MirzaPro\\VpnBot\\": "vpnbot/"
        },
        "files": [
            "config.php",
            "function.php",
            "keyboard.php",
            "table.php",
            "jdf.php",
            "Marzban.php",
            "marzneshin.php",
            "x-ui_single.php",
            "3x-ui.php",
            "alireza.php",
            "alireza_single.php",
            "hiddify.php",
            "WGDashboard.php",
            "s_ui.php",
            "ibsng.php",
            "mikrotik.php",
            "panels.php",
            "request.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "test": "vendor/bin/phpunit",
        "cs": "vendor/bin/phpcs",
        "cs-fix": "vendor/bin/phpcbf"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
